
@{
    ViewBag.Title = $"Список заказов клиента {ViewBag.CustomerName}";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="h2 text-center">Список заказов клиента @ViewBag.CustomerName</h2>
        <table class="table table-striped table-hover alert-info alert-link">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Номер заказа</th>
                    <th scope="col">Дата</th>
                    <th scope="col">Сумма</th>
                    <th scope="col">Количество позиций</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Records)
                {
                    <tr>
                        <td><a class="alert-link" href="/Home/SelectedOrder/@item.OrderId">@item.OrderId</a></td>
                        <td><p class="table-item">@item.Date</p></td>
                        <td><p class="table-item">@item.Sum</p></td>
                        <td><p class="table-item">@item.Quantity</p></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>